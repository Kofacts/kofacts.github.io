---
import BaseHead from '../components/BaseHead.astro';

export interface Props {
    title: string;
    date: string;
    link: string;
    content?: string;
    description?: string;
    image?: string;
}

const { title, date, link, content, description, image } = Astro.props;

const formatDate = (dateStr: string) => {
    try {
        const d = new Date(dateStr);
        if (isNaN(d.getTime())) return '';
        return d.toLocaleDateString('en-US', { year: 'numeric', month: 'long' });
    } catch (e) {
        return '';
    }
};

const getReadingTime = (content: string) => {
    if (!content) return '2 min';
    const words = content.replace(/<[^>]*>/g, '').split(/\s+/).length;
    const minutes = Math.ceil(words / 200);
    return `${minutes} min`;
};

const articleSchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "author": {
    "@type": "Person",
    "name": "Rapheal Obodugo",
    "url": "https://obodugo.online"
  },
  "datePublished": date,
  "mainEntityOfPage": { "@type": "WebPage", "@id": Astro.url.href },
  "image": image || "https://obodugo.online/ogmeta.png",
  "description": description || title
};
---

<!doctype html>
<html lang="en">
<head>
    <BaseHead 
        title={`${title} · Rapheal Obodugo`} 
        image={image} 
        description={description || title}
        structuredData={articleSchema}
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>

<div class="scroll-progress" id="scrollProgress"></div>

<main>
    <a href="/" class="profile-link">
        <span class="back-arrow">←</span>
        <img src="/ajabruwal.png" alt="" class="mini-avatar">
        <span class="mini-name">Rapheal Obodugo</span>
    </a>
    
    <header>
        <h1>{title}</h1>
        <div class="meta">
            <span>{formatDate(date)}</span>
            <span class="sep">·</span>
            <span>{getReadingTime(content || '')}</span>
        </div>
    </header>
    
    <article>
        {content ? (
            <div set:html={content} />
        ) : (
            <p>Preview. Full post on Substack.</p>
        )}
    </article>
    
    <footer>
        <a href={link} target="_blank" class="substack">Read on Substack ↗</a>
        <nav>
            <a href="/blog">← All essays</a>
            <a href="/">Home</a>
        </nav>
    </footer>
</main>

<style is:global>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    body {
        font-family: 'Inter', system-ui, sans-serif;
        background: #09090b;
        color: #a1a1aa;
        line-height: 1.7;
        -webkit-font-smoothing: antialiased;
    }
    
    /* Scroll Progress */
    .scroll-progress {
        position: fixed;
        top: 0;
        left: 0;
        height: 2px;
        background: linear-gradient(90deg, #3f3f46, #52525b);
        width: 0%;
        z-index: 10000;
        transition: width 0.1s ease-out;
    }
    
    main {
        max-width: 600px;
        margin: 0 auto;
        padding: 80px 24px 100px;
    }
    
    .profile-link {
        display: flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        margin-bottom: 40px;
    }
    
    .back-arrow {
        font-size: 14px;
        color: #52525b;
        transition: transform 0.2s, color 0.2s;
    }
    
    .profile-link:hover .back-arrow {
        transform: translateX(-3px);
        color: #71717a;
    }
    
    .mini-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        opacity: 0.9;
    }
    
    .mini-name {
        font-size: 14px;
        color: #71717a;
        transition: color 0.2s;
    }
    
    .profile-link:hover .mini-name {
        color: #a1a1aa;
    }
    
    header {
        margin-bottom: 48px;
    }
    
    h1 {
        font-size: 24px;
        font-weight: 600;
        color: #fafafa;
        letter-spacing: -0.02em;
        line-height: 1.3;
        margin-bottom: 12px;
    }
    
    .meta {
        font-size: 13px;
        color: #52525b;
    }
    
    .sep {
        margin: 0 8px;
        opacity: 0.5;
    }
    
    article {
        margin-bottom: 64px;
    }
    
    article p {
        font-size: 16px;
        color: #d4d4d8;
        margin-bottom: 24px;
        line-height: 1.8;
    }
    
    article h2 {
        font-size: 18px;
        font-weight: 600;
        color: #fafafa;
        margin: 40px 0 16px;
    }
    
    article h3 {
        font-size: 16px;
        font-weight: 600;
        color: #e4e4e7;
        margin: 32px 0 12px;
    }
    
    article a {
        color: #d4d4d8;
        text-decoration: underline;
        text-decoration-color: #3f3f46;
        text-underline-offset: 3px;
        transition: text-decoration-color 0.2s;
    }
    
    article a:hover {
        text-decoration-color: #71717a;
    }
    
    article ul, article ol {
        margin: 0 0 24px 24px;
        color: #d4d4d8;
    }
    
    article li {
        margin-bottom: 8px;
    }
    
    article blockquote {
        border-left: 2px solid #27272a;
        padding-left: 20px;
        margin: 24px 0;
        color: #71717a;
        font-style: italic;
    }
    
    article code {
        font-family: 'SF Mono', Monaco, monospace;
        font-size: 0.9em;
        background: #18181b;
        padding: 2px 6px;
        border-radius: 4px;
        color: #e4e4e7;
    }
    
    article pre {
        background: #18181b;
        padding: 16px;
        border-radius: 8px;
        overflow-x: auto;
        margin: 24px 0;
    }
    
    article pre code {
        background: none;
        padding: 0;
    }
    
    article img {
        display: block !important;
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 24px 0;
    }
    
    article img.sizing-normal,
    article img.sizing-full-width {
        display: block !important;
        width: 100%;
    }
    
    /* Hide Substack embed junk */
    article .button-wrapper,
    article .subscription-widget,
    article .subscribe-widget,
    article .image-link-expand,
    article .pencraft,
    article .post-ufi,
    article .like-button,
    article .share-button,
    article .comment-button,
    article [class*="subscribe"],
    article [class*="button-wrapper"] {
        display: none !important;
    }
    
    article figure {
        margin: 24px 0;
    }
    
    article figcaption {
        font-size: 13px;
        color: #52525b;
        text-align: center;
        margin-top: 8px;
    }
    
    article .captioned-image-container {
        margin: 24px 0;
    }
    
    article .image-container img,
    article .captioned-image-container img {
        border-radius: 8px;
    }
    
    article hr {
        border: none;
        border-top: 1px solid #27272a;
        margin: 40px 0;
    }
    
    footer {
        padding-top: 32px;
        border-top: 1px solid #18181b;
    }
    
    .substack {
        display: inline-block;
        font-size: 14px;
        color: #a1a1aa;
        text-decoration: none;
        padding: 10px 16px;
        background: #18181b;
        border-radius: 6px;
        margin-bottom: 24px;
        transition: background 0.2s;
    }
    
    .substack:hover {
        background: #27272a;
    }
    
    nav {
        display: flex;
        gap: 24px;
    }
    
    nav a {
        font-size: 13px;
        color: #52525b;
        text-decoration: none;
        transition: color 0.2s;
    }
    
    nav a:hover {
        color: #a1a1aa;
    }
    
    @media (max-width: 520px) {
        main { padding: 48px 20px 64px; }
        h1 { font-size: 20px; }
    }
</style>

<script>
    const progressBar = document.getElementById('scrollProgress');
    window.addEventListener('scroll', () => {
        const scrollY = window.scrollY;
        const docHeight = document.documentElement.scrollHeight - window.innerHeight;
        if (progressBar && docHeight > 0) {
            const progress = (scrollY / docHeight) * 100;
            progressBar.style.width = `${progress}%`;
        }
    }, { passive: true });
</script>

</body>
</html>